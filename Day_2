Codeforces: 1311A
#include<iostream>
using namespace std;
 
int main()
{
    int a,b,t;
    cin >> t;
    while(t--)
    {
        cin >> a >> b;
        if(a>b)
        {
            int x=a-b;
            if(x%2==0)
            cout << 1;
            else
            cout << 2;
        }
        else if(a<b)
        {
            int y=b-a;
            if(y%2==0)
            cout << 2;
            else
            cout << 1;
            
        }
        else if(a==b)
        {
            cout << 0;
        }
    }
}

