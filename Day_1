1.Linear Search:
(Seq. search)
#include<iostream>
using namespace std;

int main()
{
    int n,k,i,found=0;
    cin >> n;
    int arr[n];
    for(i=0;i<n;i++)
    {
        cin >> arr[i];
        cout << arr[i] << " ";
    }

    cin >> k;
    for(i=0;i<n;i++)
    {
        if(arr[i]==k)
            cout << "Element found at:" << i+1;
    }
    if(i==n)
        cout << "not";
}

